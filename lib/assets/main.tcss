# }

#input_command {
    height: 3;
    margin: 0 0;
}
#input_command:focus {
    border:tall  #A4D3E5;
}

#dialog {
    height: 100%;
    margin: 4 8;
    background: $panel;
    color: $text;
    border: tall $background;
    padding: 1 2;
}

/* The button class */
Button {
    width: 1fr;
}

/* Matches the question text */
.question {
    text-style: bold;
    height: 100%;
    content-align: center middle;
}

/* Matches the button container */
.buttons {
    width: 100%;
    height: auto;
    dock: bottom;
}

.separator-horizontal {
    width: 2;
    background: $background-color;
    # border: dashed rgb(44, 78, 109);
    &:hover {
        background: $hover-color;
    }
    &.separator-active {
        background: $active-color;
    }

}

.separator-vertical {
    height: 1;
    background: $background-color;
    &:hover {
        background: $hover-color;
    }
    &.separator-active {
        background: $active-color;
    }
}