$background-color: #1E2A38;
$active-color:#e8b44a;
$hover-color:rgb(42, 62, 85);
$border:round #5E81AC;
$scrollbar-color:#EBCB8B;
$scrollbar-background:#10161e;
$scrollbar-background-hover: #10161e;
$scrollbar-background-active: #10161e;
$scrollbar-color-hover: #f0debe;
$scrollbar-color-active: #e8b44a;

# Grid {
#     grid-size: 2 1;
#     grid-columns: 30% 70%;
# }

#right_panel {
    height: 100%;
    width: 100%;
    layout: vertical;
}

#left_panel {
    height: 100%;
    width: 100%;
    layout: vertical;
}

#output_display {
    position: absolute;
    dock: bottom;
    height: 1;
    width: 100%;
    background: $background-color;
    margin: 0 1;
    padding: 0 1;
    text-align: right;
    content-align: right middle;
    overflow: hidden; /* Prevent wrapping issues */
}

#output_label {
    width: 100%;
    text-align: right; /* Aligns text to the right */
}


#info_display_panel {
    # height: 100%;
    # width: 100%;
    background: $background-color;
    border: $border;
    # box-sizing: content-box;
    border-title-color: #EBCB8B;
    scrollbar-color: #EBCB8B;
    scrollbar-background:#10161e;
    scrollbar-background-hover: #10161e;
    scrollbar-background-active: #10161e;
    scrollbar-color-hover: #f0debe;
    scrollbar-color-active: #e8b44a;
    scrollbar-size-horizontal: 1;
    # scrollbar-size-vertical: 2;
}

#info_display {
    # box-sizing: border-box;
    # height: 100%;
    # box-sizing: content-box;
    width: auto;
}

